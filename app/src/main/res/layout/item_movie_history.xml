<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/history_height_def"
    android:layout_margin="@dimen/margin_default"
    app:rippleColor="@color/gray_dark">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/poster"
        android:layout_width="@dimen/history_poster_size"
        android:layout_height="@dimen/history_poster_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/title"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_default"
        android:layout_marginVertical="@dimen/margin_default"
        android:textAlignment="center"
        android:textSize="@dimen/history_title_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/poster"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/title_text_example" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dateView"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/card_text_margin_horizontal"
        android:layout_marginBottom="@dimen/card_date_reliz_margin_bottom"
        android:textAlignment="center"
        android:textSize="@dimen/history_date_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/poster"
        app:layout_constraintTop_toBottomOf="@id/title"
        tools:text="@string/date_text_example" />

</androidx.constraintlayout.widget.ConstraintLayout>